//ETKCommon.eps

function dwwrite_epd(epd, addr, value) {
    SetMemoryEPD(epd + addr / 4, SetTo, value);
}

 
function toEPD(ptr) {
    return EPD(ptr);
}

function PTR(epd) {
    foreach(unitPTR, unitEPD : EUDLoopUnit()) {
        if (unitEPD == epd) {
            return unitPTR;
        }
    }
    return 0;
}

function makeUnitStackable(epd) {
    dwwrite_epd(
        epd + (0xDC / 4),
        dwread_epd(epd + (0xDC / 4)) | 0x200000
        );
}